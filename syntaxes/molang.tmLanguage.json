{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Minecraft Molang",
  "scopeName": "source.rockide.molang",
  "patterns": [
    {
      "name": "entity.name.class",
      "match": "(q|v|t|c|query|variable|temp|context|math|array|geometry|material|texture)(?=\\.)"
    },
    {
      "name": "entity.name.function",
      "match": "(?<=\\b(q|v|t|c|query|variable|temp|context|math|array|geometry|material|texture))\\.[\\w.]+"
    },
    {
      "name": "variable.parameter",
      "match": "\\w+(?=: \\w+)"
    },
    {
      "name": "entity.name.type",
      "match": "(?<=: )\\w+"
    }
  ]
}
